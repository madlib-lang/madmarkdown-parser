yamlPair :: P.Parser YamlPair
export yamlPair = do {
  key <- P.token(alphanumeric)
  IO.pTrace("KEY", key)
  _ <- P.symbol(":")
  value <- P.token(yamlSingleContent)
  IO.pTrace("VALUE", value)
  return pipe(
    YamlPair(key, $),
    of,
  )(value)
}

export yamlContent = P.many(yamlPair)
